@using SpaDay.ViewModels;

@model AddUserViewModel;

<h1>Add User</h1>

<form method="post">


    <div asp-controller="User" asp-action="Add" class="form-group">
        <label asp-for="Email">Enter your email:</label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span> <br>
    </div>
    <div class="form-group">
        <label asp-for="Username">Username:</label><br>
        <input asp-for="Username" /> <br>
        <span asp-validation-for="Username"></span> <br>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password:</label><br>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span> <br>
    </div>
    <div class="form-group">
        <label asp-for="VerifyPassword">Confirm Password:</label><br>
        <input asp-for="VerifyPassword" type="password" />
        <span asp-validation-for="VerifyPassword"></span> <br>
    </div>
    <input type="submit" value="Submit" />





</form>